package com.mycompany.areacalc;

/**
 *
 * @author Martin Gitau Kabui 
 */
public class Circle {
    double rad;
    double area;
    
    public Circle(double rad)
    {
        this.rad= rad;
        this.area = 0; 
    }
    
    public double getRad(){
        return rad;
    }
    public void setRad(){
        this.rad = rad;
    }
    public double getArea(){
        this.area = Math.PI * rad * rad;
        return area;
    }
    public void setArea(double area){
        this.area = area;
    }
}
